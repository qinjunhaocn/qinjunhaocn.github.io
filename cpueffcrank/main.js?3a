			case '紫光':
			socLogo='../LOGO/unisoc.png';
			fontColor="#730567";
			break;
			
			case '英伟达':
			socLogo='../LOGO/nvidia.png';
			fontColor="#77B900";
			break;
			
			case '晶晨':
			socLogo='../LOGO/amlogic.png';
			fontColor="#153293";
			break;
			
			case '博通':
